---
import './blogpost.css';
const { title, url, heroImg, description, tags } = Astro.props;
---
<a href={url} class="post__card">
    <img src={ heroImg.url } alt={ title } class="post__img"/>
    <div class="card__content">
        <div>
            <h2 class="post__title">{title}</h2>
            <p class="post__description">
            {description}
        </p>
        </div>
        <div class="post__tags">
            {tags.map((tag) => (
                <span class="tag">{tag}</span>
            ))}
        </div>
    </div>
</a>